<%- include("partials/header") %>
<h2>Edit Snippets</h2>
<form action="/edit-snippet/<%= snippet._id %>" method="POST" class="auth-form">
  <label for="title">Title:</label>
  <input type="text" name="title" value="<%= snippet.title %>" required>
  </br>
  <label for="language">Language:</label>
  <input type="text" name="language" value="<%= snippet.language %>" required>
  </br>
  <label for="content">Code Snippet:</label>
  <textarea name="content" rows="8" cols="50" required><%= snippet.content %></textarea>
  </br>
  <label for="tags">Tags:</label>
  <input type="text" name="tags" value="<%= snippet.tags.join(", ") %>" required>
  </br>
  <button type="submit">Update</button>
</form>
<%- include("partials/footer") %>